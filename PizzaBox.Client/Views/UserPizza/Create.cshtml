@model List<PizzaBox.Domain.Models.Pizza>

<form action="/userpizza/create" method="post">
    <ul>
        @foreach (var item in Model)
        {
            <input type="radio" id="id" name="name" value="@item.Name">
            <label>&nbsp; @item.Name</label>
            <br>
        }

        <input type="radio" id="id" name="name" value="Custom">
            <label>&nbsp; Custom</label>
            <br>
    </ul>

    <button type="submit">Next -></button>
</form>