@model List<PizzaBox.Domain.Models.Size>

<form action="/pizza/sizeselect" method="post">
    <ul>
        @foreach (var item in Model)
        {
            <input type="radio" name="name" value="@item.Name">
            <label>&nbsp; @item.Name</label>
            <br>
        }
    </ul>

    <button type="submit">Next -></button>
</form>