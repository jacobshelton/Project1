@model List<PizzaBox.Domain.Models.Crust>

<form action="/pizza/crustselect" method="post">
    <ul>
        @foreach (var item in Model)
        {
            <input type="radio" id="id" name="name" value="@item.Name">
            <label>&nbsp; @item.Name &nbsp; @item.Price</label>
            <br>
        }
    </ul>

    <button type="submit">Next -></button>
</form>